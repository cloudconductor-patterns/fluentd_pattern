<source>
  type forward
  port 24224
</source>

<match log.*.*.**>
  type forest
  subtype file
  <template>
    path <%= node['fluentd_part']['server']['store_dir'] %>/${tag_parts[1]}/${tag_parts[2]}/${tag_parts[3..-1]}
    format single_value
    time_slice_format %Y%m%d
    time_format %Y%m%dT%H%M%S%z
  </template>
</match>
